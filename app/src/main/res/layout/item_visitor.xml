<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_14sdp"
    android:layout_marginTop="@dimen/_13sdp"
    android:layout_marginEnd="@dimen/_14sdp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_5sdp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view"
            android:layout_width="@dimen/_7sdp"
            android:layout_height="@dimen/_70sdp"
            android:background="@drawable/bacground_tint"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/image_item_Vistor"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="8dp"
            android:src="@drawable/app_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.23000002" />


        <TextView
            android:id="@+id/numper_of_visitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="@string/number_of_vistor"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintBottom_toBottomOf="@id/image_item_Vistor"
            app:layout_constraintStart_toEndOf="@id/image_item_Vistor"
            app:layout_constraintTop_toTopOf="@id/image_item_Vistor"
            app:layout_constraintVertical_bias="0.18" />

        <TextView
            android:id="@+id/date_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:drawableStart="@drawable/ic_calendar"
            android:drawablePadding="@dimen/_3sdp"
            android:hint="@string/date_of_vister"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintStart_toEndOf="@id/image_item_Vistor"
            app:layout_constraintTop_toBottomOf="@id/numper_of_visitor" />


        <TextView
            android:id="@+id/entry_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="@string/number_of_entry_fee"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/my_location_item"
            app:layout_constraintStart_toEndOf="@id/image_item_Vistor"
            app:layout_constraintTop_toBottomOf="@id/date_old"
            app:layout_constraintVertical_bias="0.18" />

        <ImageView
            android:id="@+id/my_location_item"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/my_location"
            app:layout_constraintBottom_toBottomOf="@id/my_phone_item"
            app:layout_constraintEnd_toStartOf="@id/my_phone_item"
            app:layout_constraintTop_toTopOf="@id/my_phone_item" />


        <ImageView
            android:id="@+id/my_phone_item"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:src="@drawable/my_phone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>